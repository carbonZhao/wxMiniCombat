/* pages/home/qrView/qrView.wxss */

.bar-view {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    position: fixed;
    z-index: 5;
  }
  
  .bar-background {
    width: 100%;
    position: relative;
    top: 0;
    padding: 0;
    margin: 0;
  }
  
  .left-tools {
    position: fixed;
    left: 20rpx;
    max-width: 50%;
    min-width: 15%;
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
  }
  
  .left-text {
    position: relative;
    left: 10rpx;
    max-width: 90%;
    font-size: 30rpx;
    color: black;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .left-icon {
    position: relative;
    left: 5rpx;
    width: 40rpx;
    height: 40rpx;
  }
  
  .sep-view {
    width: 100%;
    background-color: rgb(239, 240, 245);
    height: 1px;
    position: relative;
    top: -1px;
  }
  
  .nav-title-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100%;
    position: fixed;
  }
  
  .nav-title {
    font-size: 37rpx;
    color: white;
  }
  